<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="83dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/bfg" />

            <TextView
                android:id="@+id/bonjour_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Entrer Les Informations de votre patient"
                android:textColor="#494646"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/inputpatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Nom de patient"
                android:paddingLeft="10dp"
                android:paddingTop="13dp"
                android:paddingRight="10dp"
                android:paddingBottom="13dp"
                android:textColorHint="#494646"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/inputdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="10dp"
                android:ems="10"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:hint="Date de naissance"
                android:paddingLeft="10dp"
                android:paddingTop="13dp"
                android:paddingRight="10dp"
                android:paddingBottom="13dp"
                android:textColorHint="#494646"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/sexe"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_bg"
                android:drawableLeft="@drawable/ic_people"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Sexe"
                android:paddingLeft="10dp"
                android:paddingTop="13dp"
                android:paddingRight="10dp"
                android:paddingBottom="13dp"
                android:textColorHint="#494646"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_gravity="center"
                android:text="Quelqu'un dans la famille est-il autiste?"
                android:textColor="#494646"

                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/group"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:paddingBottom="8dp">


                <RadioButton
                    android:id="@+id/oui"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/design_default_color_error"
                    android:checked="false"
                    android:text="Oui"
                    android:textColor="#494646"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/non"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/design_default_color_error"
                    android:checked="false"
                    android:text="Non"
                    android:textColor="#494646"
                    android:textSize="18sp" />
            </RadioGroup>

            <Button
                android:id="@+id/symptomes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn6"
                android:gravity="center"
                android:paddingHorizontal="40dp"
                android:layout_gravity="center"
                android:text="Symptomes"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Entrer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn6"
                android:gravity="center"
                android:hint="Entrer"
                android:paddingHorizontal="40dp"
                android:textColorHint="@color/white"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>